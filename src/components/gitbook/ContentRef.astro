---
import * as path from "node:path";
import { frontmattersSignal } from "~/state/server-only/frontmatters";

interface Props {
  slug: string;
}
const { slug } = Astro.props;

const frontmatters = frontmattersSignal.value;
const fm = frontmatters[slug];
---

{
  fm && (
    <a class="m-4" href={path.posix.join("/docs", slug)}>
      <div class="hover:text-orange-5 flex items-center justify-between gap-4 rounded border bg-white p-4 transition-transform hover:translate-y-[-2px] hover:drop-shadow-[0_12px_13px_rgba(0,0,0,0.02)]">
        <span>{fm.title}</span>
        <i class="i-ic-baseline-chevron-right inline-block text-2xl" />
      </div>
    </a>
  )
}
