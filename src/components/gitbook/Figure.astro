---
interface Props {
  src: string | ImageMetadata;
  caption?: string;
  width?: string;
}
const { src, caption, width } = Astro.props;
const actualSrc = typeof src === 'string' ? src : src.src;
---

<figure class="my-4 flex flex-col items-center gap-2">
  <img class="border" src={actualSrc} alt={caption} width={width} />
  {caption && <figcaption class="text-slate-5 text-sm">{caption}</figcaption>}
</figure>
