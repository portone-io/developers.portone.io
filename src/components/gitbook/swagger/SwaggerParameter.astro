---
interface Props {
  name: string;
  type: string;
  required: boolean;
}
const { name, type, required } = Astro.props;
---

<div
  class="grid grid-cols-2 gap-2 border-b border-slate-1 py-2 text-sm text-slate-500 md:grid-cols-[1fr_8em_2fr] last:border-t-0"
>
  <div class="font-mono">
    <span>{name}</span>{
      String(required) === "true" && <span class="text-red-6">*</span>
    }
  </div>
  <div>{type}</div>
  <div class="col-span-2 md:col-auto"><slot /></div>
</div>
