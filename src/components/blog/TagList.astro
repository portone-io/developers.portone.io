---
interface Props {
  tags: string[];
}

const { tags } = Astro.props;
---

{
  tags.length > 0 && (
    <div class="flex gap-2">
      <i class="i-ic-baseline-label inline-block text-lg text-slate-4 leading-18px" />
      <ul class="m-0 flex flex-row flex-wrap list-none gap-x-3 gap-y-2 p-0">
        {tags.map((tag) => (
          <li class="text-slate-4 leading-18px transition-colors hover:text-slate-5">
            <a href={`/blog/tags/${encodeURIComponent(tag)}`}>{tag}</a>
          </li>
        ))}
      </ul>
    </div>
  )
}
