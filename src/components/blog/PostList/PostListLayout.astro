---
import type { CollectionEntry } from "astro:content";

import LayoutBase from "~/layouts/LayoutBase.astro";

import PostList from "./PostList.astro";
// import NavigationMenu, { navMap } from "~/components/blog/NavigationMenu";

interface Props {
  listTitle: string;
  entries: CollectionEntry<"blog">[];
  activeTag?: string;
}

const { listTitle, entries } = Astro.props;

// const pathname = Astro.url.pathname.replace(/\/$/, "");
---

<LayoutBase lang="ko" title="PortOne 기술 블로그" slug="blog" navAsMenu>
  <div class="mx-auto my-4 max-w-1148px min-h-full flex flex-col gap-10 px-5">
    <div class="z-10 flex flex-wrap items-end justify-between gap-x-6 gap-y-4">
      <h1 class="break-keep text-8 text-slate-8 font-bold lg:text-10">
        <a href="/blog">PortOne 기술 블로그</a>
      </h1>
      <!--
        <NavigationMenu
          client:visible
          activeTag={activeTag ?? navMap[pathname as keyof typeof navMap]}
          class="<sm:w-full <lg:ml-auto"
        />
      -->
    </div>
    <div class="flex flex-col gap-6">
      <h2 class="text-1.375rem text-slate-5 font-semibold">
        {listTitle}
      </h2>
      <PostList entries={entries} />
    </div>
  </div>
</LayoutBase>
