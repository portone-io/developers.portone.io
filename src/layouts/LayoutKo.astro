---
import LayoutBase from "./LayoutBase.astro";

interface Props {
  title?: string;
  description?: string | undefined;
  navAsMenu?: boolean | undefined;
  slug?: string | undefined;
  ogType?: string | undefined;
}

const { title, description, navAsMenu, slug, ogType } = Astro.props;
---

<LayoutBase
  lang="ko"
  title={title ?? "PortOne 개발자센터"}
  description={description}
  navAsMenu={navAsMenu}
  slug={slug}
  ogType={ogType}
>
  <slot name="og" slot="og" />
  <slot />
</LayoutBase>
